											<tr>
												 <th>Titre</th>
                                                <th>Ordre</th>
                                                <th>Parent</th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
											</tr>
										</thead>
										<tbody>
                                            
                                            {% for ressource in ressources %}
											<tr>
												<td>{{ ressource.titre }}</td>
                                                    <td>{{ ressource.ordre }}</td>
                                                    <td>{% if ressource.parent is not null %}{{ ressource.parent.titre }}{% endif %}</td>
                                                    <td><a href="{{ path('site_admin_ressource_edit', { 'ressource_id': ressource.id, 'ressource_slug': ressource.slug }) }}" class="btn btn-success">Modifier</a>
                                                    </td>
                                                    <td><a href="{{ path('site_admin_ressource', {  'ressource_slug': ressource.slug }) }}" class="btn btn-primary" >Voir</a>
                                                    </td>
                                                    <th><a href="#" class="btn btn-danger" >Supprimer</a></th>
											</tr>
                                            {% endfor %}
											
										</tbody>
									</table>
								</div>
							</div>
						</div>
					</div>
				</div>
