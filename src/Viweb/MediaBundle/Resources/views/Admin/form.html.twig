<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h4><i class="ti i-cl-4 ti-arrow-left"></i> <a href="{{ path('site_admin_ecoles')}}">Revenir</a></h4>
        </div>
        
        <div class="card-body">
            
            
            
            
            {{ form_start(form) }}
            
            
            <div class="row">
                
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.titre, "Titre") }}
                        {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                        <small id="emailHelp" class="form-text text-muted">Titre</small>
                        {{ form_errors(form.titre) }}
                    </div>
                </div><!-- col -->
                
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.lien, "Lien") }}
                        {{ form_widget(form.lien, {'attr': {'class': 'form-control'}}) }}
                        <small id="emailHelp" class="form-text text-muted">Mettre le lien vers la page on veut arriver</small>
                        {{ form_errors(form.titre) }}
                    </div>
                </div><!-- col -->
                
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_label(form.date, "Date") }}
                        {{ form_widget(form.date, {'attr': {'class': 'form-control date_time'}}) }}
                        <small id="emailHelp" class="form-text text-muted">Date</small>
                        {{ form_errors(form.date) }}
                    </div>
                </div><!-- col -->
                
                
                
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_label(form.imageMedia, "Image") }}
                        {{ form_widget(form.imageMedia, {'attr': {'class': 'form-control-file'}}) }}
                        <small id="emailHelp" class="form-text text-muted">L'image doit être de 200px de largeur par 250px de hauteur.</small>
                        {{ form_errors(form.imageMedia) }}
                    </div>
                </div><!-- col -->
                
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_label(form.categorie, "Catégorie") }}
                        {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
                        <small id="emailHelp" class="form-text text-muted">Catégorie</small>
                        {{ form_errors(form.categorie) }}
                    </div>
                </div><!-- col -->
                
                <div class="col-md-12">
                    <div class="form-group">
                        {{ form_label(form.description, "Description") }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                        <small id="emailHelp" class="form-text text-muted">Courte description</small>
                        {{ form_errors(form.description) }}
                    </div>
                </div><!-- col -->
                
                
                

                    {{ form_widget(form) }}

                    <button class="btn btn-success" type="submit">Ajouter</button>
                    
            </div><!-- row -->
        </div><!-- card body -->
  
    {{ form_end(form) }}
    
                        
</div><!-- card -->
</div><!-- /.col-md-6 -->