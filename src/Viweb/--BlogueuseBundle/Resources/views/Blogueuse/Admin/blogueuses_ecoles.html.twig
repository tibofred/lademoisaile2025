{% extends ':admin:layout.html.twig' %}



{% block content %}



		<!-- =================================================
			Content Wrapper
		================================================== -->
		<div class="content-wrapper">
			<div class="container-fluid">
			
				<!-- Title & Breadcrumbs-->
				<div class="row page-titles">
					<div class="col-md-12 align-self-center">
						<h4 class="theme-cl">Liste des blogueuses</h4>
					</div>
				</div>
				<!-- Title & Breadcrumbs-->
				
				<!-- row -->
				<div class="row">
					<div class="col-md-12">
						<div class="card">
							<div class="card-header">
								<h4><i class="ti i-cl-4 ti-plus"></i> <a href="{{ path('site_admin_blogueuse_new')}}">Ajouter une blogueuse</a></h4>
							</div>
										
							{% for ecole in ecoles %}
							<div class="ecole_art">
								<h4 class="link_ecole2" style="cursor: pointer; margin: 25px 0 5px 35px">{{ ecole.nom }}</h4>
								<div class="card-body" style="display: none;">
									<div class="row"> 
                                            
                                             {% for blogueuse in ecole.blogueuses %}
											     <div class="col-3">
												<h3>{{ blogueuse.prenom }} {{ blogueuse.nom }}</h3>
                                                <td><img src="{{ absolute_url(asset('/uploads/photos-blogueuses/')) }}{{ blogueuse.photo.id }}.{{ blogueuse.photo.url }}"></td>
                                                
                                                     {% if is_granted('ROLE_ADMIN') %}
                                                     
                                                     <a href="{{ path('site_admin_blogueuse_edit', { 'blogueuse_id': blogueuse.id }) }}" class="btn btn-success">Modifier</a>
					                                   <a href="{{ path('site_admin_blogueuse_delete', { 'blogueuse_id': blogueuse.id }) }}" class="btn btn-danger" >Suprimer</a>
                                                     {% endif %}
                                                     
                                                    
                                                    
                                                    <a href="{{ path('site_blogueuse_profil', { 'blogueuse_id': blogueuse.id, 'ecole_slug': blogueuse.ecole.slug }) }}" class="btn btn-primary"  target="_blank">Voir</a>
                                                    
											</div>
                                            {% endfor %}
											
										
	                                            
									</div>
								</div>
							</div>
							{% endfor %}


						</div>
					</div>
				</div>
				<!-- /.row -->

{% endblock %}
