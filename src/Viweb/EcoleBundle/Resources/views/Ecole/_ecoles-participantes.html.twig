{% extends '::layout.html.twig' %}

{% block title %}La deMOIs’aile - Écoles participantes{% endblock %}
{% block metaDescription %}La deMOIs’aile : Liste des écoles participantes au site La deMOIs’aile{% endblock %} 


{% block content %}


<div class="wrap-ecole-participante">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <h3>La deMOIs'aile</h3>
                    <span>Accueil / Écoles participantes</span>
                    <h4>Ton école ne s'y retrouve pas ?</h4>
                    <a href="{{ path('viweb_soumission_new') }}" class="inscris">J'inscris mon école</a>
                </div>
            
            </div>
                
        </div>
        
</div>

    <div class="container">
        
        <div class="row">
            
            <div class="col-sm-12">
                
                <div id="primary" class="content-area">
                    <main id="main" class="site-main ecole-participantes">
                        <h1>Écoles participantes</h1>
                        <div class="row">

                            {% for ecole in ecoles %}
                                {% if ecole.id != 3 %}
                                   <div class="col-sm-4">
                                      <div class="wrap-ecole text-center">
                                           <a href="{{ path('site_ecole_single', {'slug': ecole.slug}) }}">
                                                <img alt="Logo {{ ecole.nom }}" src="{{ asset('uploads/logos-ecoles/') }}{{ ecole.logo.id}}.{{ ecole.logo.url}}">
                                                <h4>{{ ecole.nom }}</h4>
                                                <h5>{{ ecole.region.nom }}</h5>
                                               
                                               
                                               
                                            </a>
                                       </div>
                                   </div>
                                {% endif %}   
                            {% endfor %}
                    
                            </div><!-- row -->
                    </main><!-- #main -->
                </div><!-- #primary -->
            
            </div>
            
            
        </div>

    </div>



    
 
{% endblock %}

