{% extends '::layout.html.twig' %}

{% block title %}La deMOIs'aile - {{ article.titre }}{% endblock %}
{% block metaDescription %}{{ article.metaDescription }}{% endblock %}

{% block seo %}
    <!-- Open Graph data  de base -->       
    <meta property="fb:app_id" content="326654584432657" /> 
    <meta property="og:url" content="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.pathInfo }}"/>
    <meta property="og:title"
          content="{% if page.ogtitle is defined %}{{ page.ogtitle }}{% endif %}{% if article.ogtitle is defined %}{{ article.ogtitle }}{% endif %}"/>
    <meta property="og:description"
          content="{% if page.ogdescription is defined %}{{ page.ogdescription }}{% endif %}{% if article.ogdescription is defined %}{{ article.ogdescription }}{% endif %}"/>

    <meta property="og:type" content="{% if article.ogtitle is defined %}article{% else %}website{% endif %}"/>

    <meta property="og:locale" content="fr_CA"/>

    <meta property="og:site_name" content="{{ compagnie }}"/>
    <!-- Open Graph Image -->
    <meta property="og:image"
          content="{{ absolute_url(asset('/uploads/photos-articles/')) }}{{ article.photo.id }}.{{ article.photo.url }}"/>

   

{% endblock %}

{% block content %}



    {{ include("::header.html.twig") }}
        

    <div class="wrap-menu-ecole">
        {{ include("::menu.html.twig") }}
    </div>
     
     <div class="container">
        <div class="row single-article">
        <div class="col-sm-8">

              <img alt="{{ article.titre }}" src="{{ absolute_url(asset('/uploads/photos-articles/')) }}{{ article.photo.id }}.{{ article.photo.url }}" class="img-fluid single-article-img">
              
                  <h5><span style="font-size: 0.7em; margin-top: 0.1em; text-align: center">
                    {% set i = 0 %}
                    {% for item in article.categories %}
                      {% if i > 0 %}, {% endif %}
                      <a href="{{ path('site_articles_categorie', {'categorie_id': item.id, })}}">{{ item.nom }}</a>
                     
                      {% set i = 1 %} 
                    {% endfor %}
                  </span></h5>
              
                  <h1 class="entry-title">{{ article.titre }}</h1>
                      
                  <ul id="auteur-info">
                      
                      <li>Écrit par : <a href="{{ path('site_blogueuse_profil', {'ecole_slug': article.blogueuse.ecole.slug, 'blogueuse_id': article.blogueuse.id })}}">{{ blogueuse.prenom }} {{ blogueuse.nom }}</a></li>
                      <li>École : <a href="#">{{ ecole.nom }}</a></li>
                      <li>
                        Année scolaire : 
                        {% if article.anneScolaire == 6 %}
                        Pré-DEP
                        {% elseif article.anneScolaire == 7 %}
                        Parcours
                        {% elseif article.anneScolaire == 8 %}
                        Membre du personnel
                        {% else %}
                        Secondaire {{ article.anneScolaire }}
                        {% endif %}
                      </li>
                      <li>Publié le : {{ article.datePublication|date("m/d/Y") }}  </li>
                      
                  </ul>

                   <div class="entry-content">
                      {{ article.contenu|raw }}
                   </div><!-- .entry-content -->

                     <div class="row">
                        <div class="col-sm-12">
                          <div class="share_button">
                            {#<a href="https://www.facebook.com/sharer/sharer.php?u=https://lademoisaile.ca{{ path('site_blogueuse_article', { 'ecole_slug': article.blogueuse.ecole.slug,'blogueuse_id': article.blogueuse.id, 'article_slug': article.slug }) }}" class="fa fa-facebook face_desk"></a>
                            <a href="fb://facewebmodal/f?href=https://www.facebook.com/sharer/sharer.php?u=https://lademoisaile.ca{{ path('site_blogueuse_article', { 'ecole_slug': article.blogueuse.ecole.slug,'blogueuse_id': article.blogueuse.id, 'article_slug': article.slug }) }}" class="fa fa-facebook face_mob"></a>#}
                            <a href="javascript:void(0);" class="fa fa-facebook"  onclick="openInFacebookApp('fb://facewebmodal/f?href=https://www.facebook.com/sharer/sharer.php?u=https://lademoisaile.ca{{ path('site_blogueuse_article', { 'ecole_slug': article.blogueuse.ecole.slug,'blogueuse_id': article.blogueuse.id, 'article_slug': article.slug }) }}', 'https://www.facebook.com/sharer/sharer.php?u=https://lademoisaile.ca{{ path('site_blogueuse_article', { 'ecole_slug': article.blogueuse.ecole.slug,'blogueuse_id': article.blogueuse.id, 'article_slug': article.slug }) }}')"></a>
                            <a href="mailto:" class="fa fa-envelope"></a>
                            <br/><br/>
                          </div>
                         </div> 
                         <div class="col-sm-12 text-center">
                            
                             <a href="{{ path('site_blogueuse_profil', {'ecole_slug': article.blogueuse.ecole.slug, 'blogueuse_id': article.blogueuse.id })}}" class="btn btn-auteur img-fluid">Voir les articles de {{ blogueuse.prenom }} {{ blogueuse.nom }}</a>
                         
                         </div>
                         
                         <div class="col-sm-12">
                             
                             {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                 <a href="{{ path('site_admin_article_edit', { 'article_id': article.id }) }}" class="">Modifier</a>

                                 {% endif %}
                         
                             
                         
                         </div>
                     </div><!-- row -->

        </div><!-- container -->

        <div class="col-sm-4 auteur-single">
               
             <h3><a href="{{ path('site_blogueuse_profil', {'ecole_slug': article.blogueuse.ecole.slug, 'blogueuse_id': article.blogueuse.id })}}">{{ blogueuse.prenom }} {{ blogueuse.nom }}</a></h3>
             <p>{{ blogueuse.description|raw }}</p>
        
                  <img alt="{{ article.blogueuse.prenom }} {{ article.blogueuse.nom }} - {{ article.blogueuse.ecole.nom }}" src="{{ absolute_url(asset('/uploads/photos-blogueuses/')) }}{{ blogueuse.photo.id }}.{{ blogueuse.photo.url }}" class="auteur img-fluid"> 
            <br><br>
            <div class="dernier_articles">
              <h3>Derniers articles</h3>

             {% for article in articles %}
                <div class="da_bloc">
                  <div><a href="{{ path('site_blogueuse_article', {'ecole_slug': article.blogueuse.ecole.slug, 'blogueuse_id': article.blogueuse.id, 'article_slug': article.slug})}}" >{{ article.titre }}</a></div>
                  <a href="{{ path('site_blogueuse_article', {'ecole_slug': article.blogueuse.ecole.slug, 'blogueuse_id': article.blogueuse.id, 'article_slug': article.slug})}}" >
                      <img alt="La deMOIs'aile - {{ article.titre }}" src="{{ asset('uploads/photos-articles/mini/') }}{{ article.photo.id }}.{{  article.photo.url }}">
                      <div class="da_descript">{{ article.description|raw }}</div>
                  </a>
                
                </div>
             {% endfor %}
            </div>
            <br><br>
            
                <!--div class="commanditaire text-center">
                    <a href="{{ path('viweb_base_contact')}}" class="btn btn-primary" style="color:white;">J'aimerais commanditer <br>La deMOIs'aile</a>
                </div-->
                                    
            
        </div>

    </div>
</div>  

<script>
function openInFacebookApp(fbUrl, webUrl) {
    window.location.href = fbUrl;
    setTimeout(() => {
        window.location.href = webUrl;
    }, 1000);
}
</script>

    
 
{% endblock %}

