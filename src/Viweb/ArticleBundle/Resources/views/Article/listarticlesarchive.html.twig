{% extends '::layout.html.twig' %}


{% block title %} Archives des Articles - La deMOIs’aile {% endblock %}
{% block metaDescription %}La deMOIs’aile - Archives des articles{% endblock %}
{% block content %}

   <div class="container">
      <div class="row mb-2">
          
          <div class="wrap-articles">
    
                <div class="container">
                
                    <div class="row titre">
                            
                        <div class="col-sm-12 text-center">
                            <img alt="Les derniers articles De nos blogueuses" src="{{ asset('assets/scss/images/fleur-derniers-articles-droite-la-demoisaile.png') }}" class="fleur-art">
                            <h1 class="art_h1"><span style="font-size: 0.7em; margin-top: 2em">Archives de toutes les écoles participantes</span></h1>
                            <h4>De nos blogueuses</h4>
                        </div>

                    </div>

                </div>  
                
                <div class="container">
                  <div class="row">
                    <div class="col-lg-8 col-sm-6 col-12" style="margin-bottom: 25px;">
                      <div class="form-group">    
                              <label class="form-control-label required" for="form_date">Date</label>
                              <select id="form_date_arch" class="form-control form-control" style="width: 250px; ">
                                <option value="0" selected="selected">Toutes</option>
                                <option value="2020-09-01">2021-2020</option>
                                <option value="2019-09-01">2020-2019</option>
                                <option value="2018-09-01">2019-2018</option>
                                <option value="2017-09-01">2018-2017</option>
                              </select>                                    
                            </div>

                    </div> 
                    <div class="col-lg-4 col-sm-6 col-12" style="margin-bottom: 25px;">
                      Revenir aux derniers articles publiés 
                      <a class="nav-link uneligne button_art btn btn-primary" href="{{ path('site_liste_articles') }}" style="width: 250px; ">Articles récents</a>
                    </div>
                  </div>
                    <div class="row">
                        
                       {% for article in articles %}
                                    
                            {{ include('@ViwebArticle/Article/appercu.html.twig') }}
                                                        
                       {% endfor %}

                    </div>
                </div>
                

            </div>
          
          

      </div>
  </div>


     
{% endblock %}
