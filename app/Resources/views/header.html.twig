            <img alt="La deMOIs'aile - {{ ecole.nom }}" src="{{ absolute_url(asset('/uploads/logos-ecoles/')) }}{{ ecole.logo.id }}.{{ ecole.logo.url }}" class="logo">
            
            <div class="col-sm-12">
                <!--h4>La deMOIs'aile</h4-->
                <br><br><br>
                <h3>{{ ecole.nom}}</h3>
                {% if ecole.slug == 'augustin-norbert-morin' %}
