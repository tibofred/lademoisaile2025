                </div>
                {% endif %}
                {% if ecole.slug == 'ecole-secondaire-de-gracefield' %}
                <div class="logo_mira" style="margin-bottom: -80px !important;">
                    <img style="height:240px !important;" alt="JSFVG" src="{{ absolute_url(asset('/assets/scss/images/')) }}JSFVG.png" alt="">
                </div>
                {% endif %}
                {% if ecole.slug == 'ecole-secondaire-le-tremplin' %}
